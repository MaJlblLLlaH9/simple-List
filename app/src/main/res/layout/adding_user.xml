<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/EnterNameEditTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/verticalMargin"
        android:ellipsize="end"
        android:hint="Your name"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/EnterAboutEditTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/verticalMargin"
        android:ellipsize="end"
        android:hint="Some information about you"
        app:layout_constraintTop_toBottomOf="@id/EnterNameEditTextView" />

    <Button
        android:id="@+id/AddButtonView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/horizontalMargin"
        android:text="Add"
        app:layout_constraintTop_toBottomOf="@id/EnterAboutEditTextView"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>